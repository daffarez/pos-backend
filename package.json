{
  "name": "pos-backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "tsx watch apps/order-api/src/server.ts",
    "dev:publisher": "tsx watch apps/order-publisher/src/index.ts",
    "dev:consumer": "tsx watch apps/order-consumer/src/index.ts",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:publisher\" \"npm run dev:consumer\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@pos/db": "^1.0.0",
    "@pos/event-contract": "^1.0.0",
    "@prisma/client": "^6.19.2",
    "body-parser": "^2.2.2",
    "convict": "^6.2.4",
    "express": "^5.2.1",
    "kafkajs": "^2.2.4",
    "prisma": "^6.19.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/express": "^5.0.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.0",
    "express-openapi-validator": "^5.6.2",
    "supertest": "^7.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18",
    "yamljs": "^0.3.0"
  }
}
