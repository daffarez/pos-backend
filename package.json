{
  "name": "pos-backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "ts-node-dev --respawn apps/order-api/src/server.ts",
    "dev:publisher": "ts-node-dev --respawn apps/order-publisher/src/publisher.ts",
    "dev:consumer": "ts-node-dev --respawn apps/order-consumer/src/consumer.ts",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:publisher\" \"npm run dev:consumer\""
  },
  "dependencies": {
    "@pos/db": "^1.0.0",
    "@pos/event-contract": "^1.0.0",
    "@prisma/client": "^6.19.2",
    "body-parser": "^2.2.2",
    "express": "^5.2.1",
    "kafkajs": "^2.2.4",
    "prisma": "^6.19.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "concurrently": "^8.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
